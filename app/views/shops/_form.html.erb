<%= simple_form_for @shop do |f| %>
  <%= f.input :name, placeholder: "Name of shop" %>
  <%= f.input :address, placeholder: "123 Main St." %>
  <%= f.input :city, placeholder: "Anyplace" %>
  <%= f.input :state, placeholder: "WY" %>
  <%= f.input :zip, placeholder: "12345" %>
  <%= f.input :url, placeholder: "http://shop-name.com" %>
  <%= f.button :submit %>
<% end %>