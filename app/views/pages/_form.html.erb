<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="errors">
      <h2>
        <%= pluralize(@user.errors.count, "error") %>
        prevented you from signing up as a new user:
      </h2>

      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, placeholder: "User Name" %><br>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, placeholder: "email@example.com" %><br>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password, placeholder: "password" %><br>
  </div>
  <div class="actions">
    <br><%= f.submit %>
  </div>
<% end %>
