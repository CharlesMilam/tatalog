<%= simple_form_for [@user, @tattoo], html: {multipart: true} do |f| %>
  <%= f.label "Upload an image" %>
  <%= f.file_field :image, button: "Upload an image" %>
  <%= f.input :name, placeholder: "A name/nickname for the tat" %>
  <%= f.input :artist_id, label: "Artist", prompt: "Artist that performed tattoo", collection: @artists %>
  Your tattoo artist missing? 
  <%= link_to "Click to add a new artist", new_artist_path %>
  <fieldset>
    <legend style="color: #212121; font-size: 1.6em;">When</legend>
    <%= f.input :when, hint: "When did you get the tattoo?", label: false,
        start_year: Date.today.year - 77, end_year: Date.today.year
    %>
  </fieldset>
  <%= f.input :shop_id, label: "Shop", prompt: "Shop where you received tattoo", collection: @shops %>
  Your shop missing?
  <%= link_to("Click to add a new shop", new_shop_path) %>
  <%= f.input :why, placeholder: "Why did you get this tattoo?" %>
  <%= f.button :submit, class: "round" %>
<% end %>

